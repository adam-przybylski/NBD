<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
  <persistence-unit name="my-persistence-unit">
    <!-- Add your entity classes here -->
    <class>org.example.Client</class>
    <class>org.example.PremiumClient</class>
    <class>org.example.RegularClient</class>
    <class>org.example.Room</class>
    <class>org.example.Default</class>
    <class>org.example.Rent</class>

    <properties>
      <!-- Configure your PostgreSQL database connection -->
      <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
      <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/nbddb"/>
      <property name="jakarta.persistence.jdbc.user" value="nbd"/>
      <property name="jakarta.persistence.jdbc.password" value="nbdpassword"/>

      <!-- Define other JPA provider-specific properties -->

      <!-- For EclipseLink Logging -->
      <property name="eclipselink.logging.level" value="FINE"/>

      <!-- For database schema generation (use 'create' for initial setup, 'update' for subsequent runs) -->
      <property name="jakarta.persistence.schema-generation.database.action" value="update"/>

      <!-- For Hibernate SQL logging -->
      <property name="hibernate.show_sql" value="true"/>
      <property name="hibernate.format_sql" value="true"/>

      <!-- For Hibernate schema generation (use 'update' to update schema) -->
      <property name="hibernate.hbm2ddl.auto" value="update"/>

      <!--For jakarta set isolation level      -->
      <property name="jakarta.persistence.jdbc.connection.isolation" value="TRANSACTION_READ_COMMITTED"/>
    </properties>
  </persistence-unit>
</persistence>
